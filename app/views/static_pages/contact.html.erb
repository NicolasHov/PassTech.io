<body class="profile-page sidebar-collapse">
    <%= render 'header' %>
    <div class="wrapper">
        <div class="page-header page-header-small">
            <div class="page-header-image" data-parallax="true" data-nav-image="../assets/img/blurred-image-2.jpg">
            </div>
        </div>
        <%= render '/layouts/flash-alert'%>

        <div class="main">
            <div class="contact-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5 ml-auto mr-auto">
                            <h2 class="title">Envoyez-nous un message</h2>
                            <p class="description">Vous pouvez nous envoyer un message en remplissant le formulaire suivant, ou alors sur hovart.nicolas@gmail.com
                                <br>
                                <br>
                            </p>
                            <form role="form" id="contact-form" method="post">
                                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                                <label>Votre nom</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" name="name" class="form-control" placeholder="Mon nom">
                                </div>
                                <label>Votre email</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                    </span>
                                    <input type="email" name="email" class="form-control" placeholder="exemple@exemp.le">
                                </div>
                                <label>Votre téléphone</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                       <i class="fa fa-phone" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" name="phone" placeholder="06 07 08 09 10" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Votre message</label>
                                    <textarea name="message" class="form-control" id="message" rows="6"></textarea>
                                </div>
                                <div class="submit text-center">
                                    <input type="submit" class="btn btn-primary btn-raised btn-round" value="Nous contacter" />
                                </div>
                            </form>
                        </div>
                        <div class="col-md-5 ml-auto mr-auto">
                            <div class="info info-horizontal mt-5">
                                <div class="icon icon-primary">
                                   <i class="fa fa-map-marker" aria-hidden="true"></i>
                                </div>
                                <div class="description">
                                    <h4 class="info-title">Nous sommes accompagnés par <%= link_to("Les Déterminés", "https://lesdetermines.com/" , target: "_blank") %></h4>
                                </div>
                            </div>
                            <div class="info info-horizontal">
                                <div class="icon icon-primary">
                                    <i class="fa fa-mobile" aria-hidden="true"></i>
                                </div>
                                <div class="description">
                                    <h4 class="info-title">Besoin de nous appeler ?</h4>
                                    <p> Nicolas Hovart
                                        <br> 06 58 06 69 95
                                    </p>
                                </div>
                            </div>
                            <div class="info info-horizontal">
                                <div class="icon icon-primary">
                                   <i class="fa fa-briefcase" aria-hidden="true"></i>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br><br><br>
    <%= render 'footer' %>
</div>
